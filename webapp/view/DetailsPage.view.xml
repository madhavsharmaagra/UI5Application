<mvc:View
	controllerName="sampleAppUI5Application.controller.DetailsPage"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
	<Page
		id="detailPage"
		title="{i18n>addDetailPageTitle}"
		showNavButton="true"
		navButtonPress="onNavBack">
		<Panel id="detailsPanel"
			headerText="Details Panel"
			visible="false">
			<l:Grid>
				<l:content>
					<Image src="{url}" width="100%"/>
					<VBox>
						<Text text="{title}" class="nameTitle" />
						<Text text="{id}" />
					</VBox>
				</l:content>
			</l:Grid>
		</Panel>
		<footer>
			<Bar>
				<contentRight>
					<Button id="edit" text="Edit" press="handleEditPress" />
					<Button id="save" text="Save" type="Emphasized" visible="false" press="handleSavePress" />
					<Button id="cancel" text="Cancel" visible="false" press="handleCancelPress" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>