<mvc:View
	controllerName="sampleAppUI5Application.controller.DetailsPage"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="detailPage"
		title="{i18n>addDetailPageTitle}"
		showNavButton="true"
		navButtonPress="onNavBack">
		<footer>
			<Bar>
				<contentRight>
					<Button id="edit" text="Edit" press="handleEditPress" />
					<Button id="save" text="Save" type="Emphasized" visible="false" press="handleSavePress" />
					<Button id="cancel" text="Cancel" visible="false" press="handleCancelPress" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>